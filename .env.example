# Environment
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql+asyncpg://username:password@hostname:5432/trading_arena
REDIS_URL=redis://hostname:6379

# Binance
BINANCE_API_KEY=REPLACE_WITH_YOUR_BINANCE_API_KEY
BINANCE_SECRET_KEY=REPLACE_WITH_YOUR_BINANCE_SECRET_KEY
BINANCE_TESTNET=false

# Security
JWT_SECRET_KEY=REPLACE_WITH_YOUR_JWT_SECRET_KEY_MIN_32_CHARS
ADMIN_PASSWORD=REPLACE_WITH_YOUR_SECURE_ADMIN_PASSWORD

# OpenRouter (for LLM agents)
OPENROUTER_API_KEY=REPLACE_WITH_YOUR_OPENROUTER_API_KEY

# Competition Settings
COMPETITION_START_DATE=2024-01-01
LEAGUE_DURATION_DAYS=30
TOURNAMENT_INTERVAL_DAYS=90

# Risk Management
DEFAULT_MAX_LEVERAGE=5.0
DEFAULT_MAX_DRAWDOWN=0.30
MIN_ACCOUNT_BALANCE=1000.0

# Monitoring
GRAFANA_ADMIN_PASSWORD=REPLACE_WITH_SECURE_ADMIN_PASSWORD
PROMETHEUS_PORT=9090